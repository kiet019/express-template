<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Information</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <style>
      .user-info {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .user-info p {
        margin-bottom: 10px;
      }
      .user-info span {
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <%- include('./components/navbar') %> <%- include('./components/script') %>
    <div class="container">
      <h1 class="title">Account</h1>
      <div class="user-info">
        <div
          class="mb-5"
          style="
            display: flex;
            align-items: center;
            justify-content: space-between;
          "
        >
          <h2 class="title is-4 mb-0">User Information</h2>
          <div class="buttons">
            <a class="button is-success" href="/view/account/update">Update</a>
            <a class="button is-danger" href="/view/account/update-password">Change password</a>
          </div>
        </div>
        <p><span>Name:</span> <span id="name"><%= user.name %></span></p>
        <p><span>Username:</span> <span id="username"><%= user.username %></span></p>
        <p><span>Year of Birth:</span> <span id="yearOfBirth"><%= user.YOB %></span></p>
      </div>
    </div>
  </body>
</html>
