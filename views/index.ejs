<!doctype html>
<html>
  <head>
    <title>Data Table</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <meta name="keywords" content="" />
    <link rel="icon" href="images/logo.png" type="image/png" sizes="16x16" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
  </head>
  <style>
    .dropdown {
      width: 150px !important;
    }
    .logo {
      margin-left: 1rem;
    }
    .layout {
      max-width: 1250px;
      margin: auto;
    }
    .delete {
      background-color: #d32f2f !important;
      color: white;
    }
    .update {
      color: white;
      background-color: #2e7d32 !important;
    }
    .delete-one {
      background-color: #db6565 !important;
      color: white;
    }
    .update-one {
      margin-right: 10px;
      color: white;
      background-color: #6ec273 !important;
    }
    form {
        background-color: white;
        max-width: 600px;
        margin: auto;
        padding: 0rem 2rem 2rem;
        border: 2px solid gray;
        border-radius: 1rem;
      }
  </style>
  <body>
    <section>
      <nav>
        <div class="nav-wrapper">
          <a href="#" id="home" class="brand-logo logo">Home</a>
          <ul class="right hide-on-med-and-down">
            <li>
              <a href="#" id="nation"
                ><i class="material-icons right">flag</i>Nation</a
              >
            </li>
            <li>
              <a href="#" id="player"
                ><i class="material-icons right">person</i>Player</a
              >
            </li>
            <li>
              <a class="dropdown-trigger" href="#" data-target="dropdown1"
                >Kiet<i class="material-icons right">arrow_drop_down</i></a
              >
            </li>
          </ul>
        </div>
      </nav>

      <ul id="dropdown1" class="dropdown-content dropdown">
        <li style="white-space: nowrap">
          <a href="/view"><i class="material-icons left">settings</i>Account</a>
        </li>
        <li>
          <a href="/view">Logout<i class="material-icons left">logout</i></a>
        </li>
      </ul>
    </section>
    <section>
      <div class="layout">
        <div id="main"></div>
      </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var elems = document.querySelectorAll(".dropdown-trigger");
        var instances = M.Dropdown.init(elems, { closeOnClick: true });
      });
    </script>
    <script>
      $("#nation").click(function (e) {
        e.preventDefault(); // Ngăn chặn liên kết mặc định chuyển hướng trang
        $.ajax({
          url: "/view/nation/table",
          success: (data) => {
            $("#main").html(data);
          },
        });
      });
      $("#player").click(function (e) {
        e.preventDefault(); // Ngăn chặn liên kết mặc định chuyển hướng trang
        $.ajax({
          url: "/view/player/table",
          success: (data) => {
            $("#main").html(data);
          },
        });
      });
      $("#home").click(function (e) {
        e.preventDefault(); // Ngăn chặn liên kết mặc định chuyển hướng trang
        $("#main").html("<div></div>");
      });
    </script>
  </body>
</html>
