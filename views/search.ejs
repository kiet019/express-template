<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hello Bulma!</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>
  <body>
    <%- include('./components/navbar') %> <%- include('./components/script') %>
    <div class="container">
      <h1 class="title">Search for <%= name %></h1>
      <div class="grid-contaner">
        <% for( value of orchidsList) { %>
        <div class="grid-item">
          <a href="/view/details/<%= value._id %>">
            <div class="card">
              <div class="card-image">
                <figure class="image is-4by3">
                  <img
                    src="<%= value.image %>"
                    alt="Placeholder image"
                    class="image"
                  />
                </figure>
              </div>
              <div class="card-content">
                <div class="content">
                  <div class="subtitle is-5"><%= value.name %></div>
                  <div class="subtitle is-6">
                    Category: <%= value.category.categoryName%>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
