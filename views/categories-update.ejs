<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hello Bulma!</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>
  <body>
    <%- include('./components/navbar') %> <%- include('./components/script') %>

    <div class="container">
      <div class="modal-card card">
        <header class="modal-card-head">
          <p class="modal-card-title">Update form</p>
        </header>
        <form id="updateCategoryForm">
          <section class="modal-card-body">
            <div class="field">
              <input
                type="text"
                id="id"
                value="<%= category._id %>"
                style="display: none"
              />
              <label for="newCategoryNameInput" class="label"
                >Category name:</label
              >
              <div class="control">
                <input
                  type="text"
                  value="<%= category.categoryName %>"
                  id="updateCategoryNameInput"
                  name="updateName"
                  class="input"
                />
              </div>
            </div>
            <% for( value of error ) { %>
            <div class="notification is-danger is-light mt-2">
              <%= "Error: " + value %>
            </div>
            <% } %> <% for( value of success ) { %>
            <div class="notification is-success is-light mt-2">
              <%= "Success: " + value %>
            </div>
            <% } %>
          </section>
          <footer class="modal-card-foot" style="justify-content: flex-end">
            <button class="button is-success" type="submit">
              Save changes
            </button>
          </footer>
        </form>
      </div>
    </div>
  </body>
</html>
