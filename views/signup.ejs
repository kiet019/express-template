<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hello Bulma!</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <style>
      .container {
        max-width: 1000px !important;
      }
    </style>
  </head>
  <body>
    <%- include('./components/navbar') %> <%- include('./components/script') %>

    <div class="container">
      <div
        class="card"
        style="max-width: 500px; margin: 5rem auto; padding: 2rem"
      >
        <form id="signupForm">
          <div class="field">
            <span class="label">Username:</span>
            <input
              id="usernameInput"
              class="input"
              type="text"
              placeholder="Username"
            />
          </div>
          <div class="field">
            <span class="label">Password:</span>
            <input
              id="passwordInput"
              class="input"
              type="password"
              placeholder="Password"
            />
          </div>
          <div class="field">
            <span class="label">Name:</span>
            <input
              id="nameInput"
              class="input"
              type="text"
              placeholder="Name"
            />
          </div>
          <div class="field">
            <span class="label">Year of age:</span>
            <input
              id="yearInput"
              class="input"
              type="number"
              placeholder="Year of age"
            />
          </div>
          <div class="field">
            <p class="control" style="text-align: end">
              <button class="button is-success" type="submit">Sign up</button>
            </p>
          </div>
        </form>
        <% for( value of error ) { %>
        <div class="notification is-danger is-light mt-2">
          <%= "Error: " + value %>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
