<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <form method="post" id="update" style="margin-top: 2rem">
      <h5 style="text-align: center">Update Nation Form</h5>
      <input
        type="text"
        name="id"
        value="<%= nation._id %>"
        style="display: none"
      />
      <div class="input-field">
        <input
          id="name"
          type="text"
          class="validate"
          name="name"
          value="<%= nation.name %>"
          placeholder="Name"
          required
        />
      </div>
      <div class="input-field">
        <input
          id="description"
          type="text"
          class="validate"
          name="description"
          placeholder="Description"
          value="<%= nation.description %>"
        />
      </div>
      <div style="display: flex; align-items: center; justify-content: end">
        <button class="btn modal-close waves-effect waves-light" type="submit">
          Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
    <script>
      $("#update").submit(() => {
        event.preventDefault();

        var id = $("input[name='id']").val();
        var name = $("input[name='name']").val();
        var description = $("input[name='description']").val();
        console.log({ id, name, description });
        $.ajax({
          url: "/view/nation/update",
          method: "POST",
          data: { id, name, description },
          success: (data) => {
            console.log(data);
            $("#main").html(data);
          },
        });
      });
    </script>
  </body>
</html>
