<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hello Bulma!</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <style>
      .container {
        max-width: 1000px !important;
      }
    </style>
  </head>
  <body>
    <%- include('./components/navbar') %> <%- include('./components/script') %>

    <div class="container">
      <div
        class="card"
        style="max-width: 500px; margin: 5rem auto; padding: 2rem"
      >
        <form id="loginForm">
          <div class="field">
            <span class="label">Username:</span>
            <p class="control has-icons-left has-icons-right">
              <input
                class="input"
                type="text"
                id="usernameInput"
                placeholder="Username"
              />
              <span class="icon is-small is-left">
                <i class="fa-solid fa-user"></i>
              </span>
              <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <span class="label">Password:</span>
            <p class="control has-icons-left">
              <input
                class="input"
                type="password"
                id="passwordInput"
                placeholder="Password"
              />
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control" style="text-align: end">
              <button class="button is-success" type="submit">Login</button>
            </p>
          </div>
        </form>
        <% for( value of error ) { %>
        <div class="notification is-danger is-light mt-2"><%= "Error: " + value %></div>
        <% } %>
      </div>
    </div>
  </body>
</html>
