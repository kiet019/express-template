<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hello Bulma!</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <style>
      .navbar {
        background-color: white;
        padding: 0.5rem 1rem !important;
        box-shadow:
          0 0.5em 1em -0.125em rgba(10, 10, 10, 0.1),
          0 0 0 1px rgba(10, 10, 10, 0.02);
      }
    </style>
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="<%= isAdmin ? '/view/admin' : '/view' %>">
          <h1 style="font-size: x-large; font-weight: 700">HOME</h1>
        </a>
        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div id="navbarBasicExample" class="navbar-menu">
        <% if (isAdmin) { %>
        <div class="navbar-start">
          <a class="navbar-item" href="/view/admin/categories">Categories</a>

          <a class="navbar-item" href="/view/admin/orchids">Orchids</a>
        </div>
        <% } %>
        <div class="navbar-end">
          <% if (!isAdmin) { %>
          <form class="navbar-item" method="get" id="searchForm">
            <p class="control has-icons-left">
              <input
                class="input"
                id="searchInput"
                type="text"
                placeholder="Search orchids ..."
              />
              <span class="icon is-small is-left">
                <i class="fa-solid fa-magnifying-glass"></i>
              </span>
            </p>
          </form>

          <% } %>
          <div class="navbar-item">
            <% if (isLogin) { %>
            <div class="buttons">
              <% if (!isAdmin) { %>
              <a class="button is-success" href="/view/account">
                <strong>Account</strong>
              </a>
              <% } %>
              <button class="button is-danger" id="logoutButton">
                <strong>Sign out</strong>
              </button>
            </div>
            <% } else { %>
            <div class="buttons">
              <a class="button is-primary" href="/view/signup">
                <strong>Sign up</strong>
              </a>
              <a class="button is-light" href="/view/login"> Log in </a>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </nav>
  </body>
</html>
