<!doctype html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ccc;
      }

      th {
        background-color: #2b3445;
        font-weight: bold;
        color: white;
      }

      td {
        background-color: #fff;
        color: #333;
      }
    </style>
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Image</th>
          <th>Club</th>
          <th>Position</th>
          <th>Goals</th>
          <th>Captain</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% for( value of playerList) { %>
        <tr>
          <td><%= value._id%></td>
          <!-- <td><%= value.image%></td> -->
          <td>
            <img
              style="
                width: 50px;
                height: 50px;
                object-fit: cover;
                object-position: center;
              "
              src="https://s.yimg.com/uu/api/res/1.2/k7Kn4qYSUjzJ22TCVYFYSg--~B/aD0zMTMyO3c9NTU2ODtzbT0xO2FwcGlkPXl0YWNoeW9u/https://media.zenfs.com/en/pa-sport.com/49bc293bfc3a3f3d28c9254c211a92c9"
              alt=""
              class="circle responsive-img"
            />
          </td>
          <td><%= value.name%></td>
          <td><%= value.club%></td>
          <td><%= value.position%></td>
          <td><%= value.goals%></td>
          <td><%= value.isCaptain%></td>
          <td></td>
        </tr>
        <% }%>
      </tbody>
    </table>
  </body>
</html>
